---
permalink: "{% if path %}{{ path | slug }}{% else %}{{'/page/'}}{% if alias %}{{ alias | slug }}{% else %}{{ title | slug }}{% endif %}{% endif %}/index.html"
---

{% extends 'page.njk' %}

{% block body %}
    <p>{{url}}</p>
    <div>
        <h2>{{ title }}</h2>

        {% if tags %}
            <div class="mb-2">
                {% for tag in tags %}
                    {%- if tag !== "post" -%}
                        <a class="tag {{ tag | replace('.', '') }}" href="{{ site.baseUrl }}blog/tag/{{ tag }}">{{ tag }}</a>
                    {%- endif -%}
                {% endfor %}
            </div>
        {% endif %}

        <div class="content post">
            {{ content | safe }}
        </div>

        {% if date %}
            <br />
            {% if updatedDate | string in date | string %}
                <p class="text-sm italic">Created on
                    <span datetime="{{ date }}">{{ date | dateDisplay }}</span>.</p>
            {% else %}
                <p class="text-sm italic">Last updated on
                    <span datetime="{{ date }}">{{ updatedDate | dateDisplay }}</span>. Created on
                    <span datetime="{{ date }}">{{ date | dateDisplay }}</span>.</p>
            {% endif %}
        {% endif %}

        {%- set nextPost = collections['pagesWithoutDrafts'] | getNextCollectionItem(page) %}
        {%- if nextPost %}
            <p class="uppercase text-xs mt-6">Next</p>
            <p class="font-bold mb-2">
                <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
            </p>
        {% endif %}
        {%- set previousPost = collections['pagesWithoutDrafts'] | getPreviousCollectionItem(page) %}
        {%- if previousPost %}
            <p class="uppercase text-xs mt-6">Previous</p>

            <p class="font-bold">
                <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
            </p>
        {% endif %}
    </div>
{% endblock %}
